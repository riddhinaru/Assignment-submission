        "#Python Program to find the Prime Number\n",
        "Number =int(input(\"Please enter any Number:\"))\n",
        "count = 0\n",
        "i = 2\n",
        "\n",
        "while(i <= Number//2):\n",
        "  if(Number % i== 0):\n",
        "      count = count + 1\n",
        "      break\n",
        "    i =i + 1\n",
        "\n",
        "if(count == 0 and Number != 1):\n",
        "   print(\" %d is a Prime Number\" %Number)\n",
        "else:\n",
        "   print(\" %d is not a Prime Number\" %Number)"
